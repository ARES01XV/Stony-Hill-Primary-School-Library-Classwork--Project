<body>
    <div class="table_container">

        <div class="book_request">
            <h3>Book Requests</h3>
            <a href="admin/logout">Log out</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Student ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Book(s) Borrowed</th>
                    <th scope="col">Book ID</th>
                    <th scope="col">Book Name</th>
                    <th scope="col">Approved Date</th>
                    <th scope="col">Due Date</th>
                </tr>
            </thead>
            <tbody>
                <% Object.values(requests).forEach((requests)=> { %>
                    <tr>
                        <td> <%= requests.student_id %> </td>
                        <td> <%= requests.frst_nm %> </td>
                        <td> <%= requests.last_nm %> </td>
                        <td> <%= requests.borrowed %> </td>
                        <td> <%= requests.book_id %> </td>
                        <td> <%= requests.book_name %> </td>
                        <td> <%= requests.approved_date %> </td>
                        <td> <%= requests.due_date %> </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        
